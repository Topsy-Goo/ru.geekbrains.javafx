	Вместо GridPane возмём VBox
</GridPane -->

<!--
 Вместо GridPane возмём VBox
 Vbox — это вертикальный ящик, который располагает элементы сверху вниз.
-->
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<!-- Атрибут fx:controller="sample.Controller" указывает файл, который управляет этим fxml-файлом. -->
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ToggleButton?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">

	<!-- внутри вертикальной коробки можно создать горизонтальную коробку -->
	<HBox>
		<VBox.margin>
			<Insets top="20" bottom="20" right="20" left="20"/>
		</VBox.margin>

		<TextField	fx:id="someTextFieldID"
					promptText="Введите номер кредитной карты: "
					HBox.hgrow="ALWAYS"
					onAction="#clickGetCCNumber"/>
		<Button
				text="Вступить в фонд «Озеленение Луны»"
				onAction="#clickGetCCNumber"/>
		<!-- Обработчик нажатия на кнопку — clickGetCCNumber — создаётся в классе Controller.
		Один и тот же обработчик может обслуживать несколько кнопок. Так, например, если указать этот же
		обработчик для текстового поля, то можно обрабатывать нажатия кнопки Enter, как нажатия кнопки. -->
	</HBox>

	<VBox alignment="center">
		<TextArea
				  fx:id="someTextAreaID"
				  editable="false"
				  VBox.vgrow="ALWAYS"
				  text="Наш фонд самый лучший!"
				  focusTraversable="false"> <!-- Аналог атрибута Read Only -->

			<VBox.margin>	<!-- наружние поля/отступы вокруг текстового поля -->
				<Insets top="20" bottom="20" right="20" left="20"/>
			</VBox.margin>

			<padding>	<!-- внутренние поля/отступы внутри текстового поля -->
				<Insets left="20" right="20"/>
			</padding>

			<font>
				<Font size="20" name="Tahoma"/>
			</font>

		</TextArea>
		<!-- Если элементу управления назначить ID (см. атрибут fx:id), то к нему смогут обращаться методы.
			 Атрибут editable="false" запрещает пользователю редактировать текстовое поле. -->

		<!-- Существуют и другие компановщики:
				FlowPane - ;
				AnchorPane - элементы раскладываются относительно друг друга;
				GridPane - ;
				BorderPane - элементы раскладываются по краям и центру;
		-->
	</VBox>

	<FlowPane prefHeight="50">
		<VBox.margin>	<!-- наружние поля/отступы вокруг текстового поля -->
			<Insets top="20" bottom="20" right="20" left="20"/>
		</VBox.margin>

		<Button text="Посмотреть презентацию"/>

		<Button text="1"/>
		<Button text="2"/>
		<Button text="3"/>
		<Button text="4"/>
		<GridPane>
			<Button text="1" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
			<Button text="2" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
			<Button text="3" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
			<Button text="4" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
			<Button text="5" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
			<Button text="6" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
			<Button text="7" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
			<Button text="8" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
			<Button text="9" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
			<Button text="0" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
			<columnConstraints>
				<ColumnConstraints prefWidth="50"/>
				<ColumnConstraints prefWidth="50"/>
				<ColumnConstraints prefWidth="50"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints prefHeight="30"/>
				<RowConstraints prefHeight="30"/>
				<RowConstraints prefHeight="30"/>
				<RowConstraints prefHeight="30"/>
				<RowConstraints prefHeight="30"/>
			</rowConstraints>
		</GridPane>
	</FlowPane>

	<VBox alignment="center">
		<RadioButton mnemonicParsing="false" selected="true" text="Months1">
			<toggleGroup>
				<ToggleGroup fx:id="Months"/>
			</toggleGroup>
		</RadioButton>
		<RadioButton mnemonicParsing="false" selected="true" text="Months2" toggleGroup="$Months"/>
		<RadioButton mnemonicParsing="false" text="Months3" toggleGroup="$Months"/>
		<RadioButton mnemonicParsing="false" text="Months4" toggleGroup="$Months"/>
	</VBox>

	<HBox>
		<RadioButton text="Ответ 1" fx:id="answer1" HBox.hgrow="ALWAYS" maxWidth="Infinity" selected="true" onAction="#tryToAnswer">
			<toggleGroup>
				<ToggleGroup fx:id="Answers"/>
			</toggleGroup>
		</RadioButton>
		<RadioButton text="Ответ 2" fx:id="answer2" HBox.hgrow="ALWAYS" maxWidth="Infinity" toggleGroup="$Answers" onAction="#tryToAnswer"/>
		<RadioButton text="Ответ 3" fx:id="answer3" HBox.hgrow="ALWAYS" maxWidth="Infinity" toggleGroup="$Answers" onAction="#tryToAnswer"/>
		<RadioButton text="Ответ 4" fx:id="answer4" HBox.hgrow="ALWAYS" maxWidth="Infinity" toggleGroup="$Answers" onAction="#tryToAnswer"/>
		<VBox.margin>
			<Insets top="20" bottom="20" right="20" left="20"/>
		</VBox.margin>

	</HBox>

